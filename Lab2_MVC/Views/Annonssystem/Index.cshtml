
@{
    ViewData["Title"] = "Index";
}
<script>
    function Switch() {
        document.getElementById('Privatform').style.display = 'none';
        document.getElementById('Foretagform').style.display = 'block';

    }
    function Switch2() {
        document.getElementById('Foretagform').style.display = 'none';
        document.getElementById('Privatform').style.display = 'block';

    }


</script>

<h1>Index</h1>
<input type="radio" id="privat" name="switch" onclick="Switch()" />
<input type="radio" id="foretag" name="switch" onclick="Switch2()" />

